<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expandableLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewPause"
            style="@style/routine_text_view_item"
            android:text="@string/pause" />

        <EditText
            android:id="@+id/editTextPause"
            style="@style/routine_edit_text_item"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:digits="012345678-."
            android:hint="@string/enter_pause" />

        <Spinner
            android:id="@+id/spinnerPause"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown" />

        <FrameLayout
            android:id="@+id/imageViewPauseDescription"
            style="@style/routine_description_layout">

            <ImageView
                style="@style/routine_image_view_description" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLoad"
            style="@style/routine_text_view_item"
            android:text="@string/load" />

        <EditText
            android:id="@+id/editTextLoad"
            style="@style/routine_edit_text_item"
            android:layout_weight="1"
            android:hint="@string/enter_load"
            android:inputType="number"
            android:digits="0123456789."/>

        <Spinner
            android:id="@+id/spinnerLoad"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown" />

        <FrameLayout
            android:id="@+id/imageViewLoadDescription"
            style="@style/routine_description_layout">

            <ImageView
                style="@style/routine_image_view_description" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewReps"
            style="@style/routine_text_view_item"
            android:text="@string/reps" />

        <EditText
            android:id="@+id/editTextReps"
            style="@style/routine_edit_text_item"
            android:inputType="number"
            android:digits="012345678-"
            android:hint="@string/enter_reps" />

        <FrameLayout
            android:id="@+id/imageViewRepsDescription"
            style="@style/routine_description_layout">

            <ImageView

                style="@style/routine_image_view_description" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewSeries"
            style="@style/routine_text_view_item"
            android:text="@string/series" />

        <EditText
            android:id="@+id/editTextSeries"
            style="@style/routine_edit_text_item"
            android:hint="@string/enter_series"
            android:inputType="number" />

        <FrameLayout
            android:id="@+id/imageViewSeriesDescription"
            style="@style/routine_description_layout">

            <ImageView
                style="@style/routine_image_view_description" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewIntensity"
            style="@style/routine_text_view_item"
            android:text="@string/rpe" />

        <EditText
            android:id="@+id/editTextIntensity"
            style="@style/routine_edit_text_item"
            android:hint="@string/enter_rpe"
            android:inputType="numberDecimal"
            android:digits="012345678-."/>

        <FrameLayout
            android:id="@+id/imageViewRpeDescription"
            style="@style/routine_description_layout">

            <ImageView
                style="@style/routine_image_view_description" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewPace"
            style="@style/routine_text_view_item"
            android:text="@string/pace" />

        <EditText
            android:id="@+id/editTextPace"
            style="@style/routine_edit_text_item"
            android:hint="@string/enter_pace" />

        <FrameLayout
            android:id="@+id/imageViewPaceDescription"
            style="@style/routine_description_layout">

            <ImageView
                style="@style/routine_image_view_description" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>