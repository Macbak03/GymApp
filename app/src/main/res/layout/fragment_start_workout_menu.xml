<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workoutMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_bottom_dialog_sheet_background"
    android:orientation="vertical"
    tools:context=".fragment.StartWorkoutMenuFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/swipeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="7dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/baseline_call_to_action_24"
            android:contentDescription="SwipeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewStartWorkoutMenu"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="5dp" />


</LinearLayout>