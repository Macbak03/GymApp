<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewCurrentTrainingPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your current training plan: "
            android:textSize="20sp"/>
        <Spinner
            android:id="@+id/spinnerTrainingPlans"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:spinnerMode="dropdown"

            />

    </LinearLayout>

    <Button
        android:id="@+id/buttonStartWorkout"
        android:layout_width="254dp"
        android:layout_height="51dp"
        android:layout_marginBottom="64dp"
        android:text="Start Workout"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/startWorkoutMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_start_workout_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>