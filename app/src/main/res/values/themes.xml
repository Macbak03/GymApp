<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GymApp" parent="@style/Theme.AppCompat" />

    <style name="routine_table_row_item" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">null</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="routine_table_title_row_item" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>