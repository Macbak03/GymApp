<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Dark blue theme-->

    <style name="Theme.DarkBlue" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>

        <item name="android:windowBackground">@drawable/background_color</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/app_background</item>

        <item name="bottomNavigationStyle">@style/DarkBlueCustomBottomNavigationStyle</item>
        <item name="cardViewStyle">@style/DarkBlueCustomCardView</item>
        <item name="buttonStyle">@style/DarkBlueCustomButtonStyle</item>
        <item name="android:textViewStyle">@style/DarkBlueCustomTextViewStyle</item>
        <item name="bottomSheetDialogTheme">@style/DarkBlueCustomBottomSheetDialogTheme</item>

    </style>

    <style name="DarkBlueCustomBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:buttonStyle">@style/DarkBlueCustomButtonStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DarkBlueCustomCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/cardColor</item>
        <!--<item name="android:background">@drawable/button_color</item>-->
        <item name="cardCornerRadius">8dp</item>
        <item name="android:elevation">200dp</item>
    </style>

    <style name="DarkBlueCustomAddButtonColor">
        <item name="android:backgroundTint">@color/addButtonColor</item>
    </style>

    <style name="DarkBlueCustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_color</item>
    </style>

    <style name="DarkBlueCustomTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkBlueYourAlertDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="DarkBlueCustomBottomNavigationStyle">
        <item name="itemBackground">@drawable/background_color</item>
    </style>

    <!--Dark blue theme-->


    <!--Dark theme-->

    <style name="Theme.Dark" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>

        <item name="android:windowBackground">@drawable/dark_background_color</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/bottomNavigationBarColor</item>
        <item name="colorAccent">#698CFD</item>

        <item name="bottomNavigationStyle">@style/DarkCustomBottomNavigationStyle</item>
        <item name="cardViewStyle">@style/DarkCustomCardView</item>
        <item name="buttonStyle">@style/DarkCustomButtonStyle</item>
        <item name="android:textViewStyle">@style/DarkCustomTextViewStyle</item>
        <item name="bottomSheetDialogTheme">@style/DarkCustomBottomSheetDialogTheme</item>
    </style>

    <style name="DarkCustomBottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/DarkCustomBottomSheetStyle</item>
        <item name="android:buttonStyle">@style/DarkCustomButtonStyle</item>
    </style>

    <style name="DarkCustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DarkCustomCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/darkCardColor</item>
        <item name="android:background">@color/darkCardBackgroundColor</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="android:elevation">200dp</item>
    </style>

    <style name="DarkCustomAddButtonColor">
        <item name="android:backgroundTint">#8B8B8B</item>
    </style>

    <style name="DarkCustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/dark_button_color</item>
    </style>

    <style name="DarkCustomTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DarkCustomBottomNavigationStyle">
        <item name="itemBackground">@color/bottomNavigationBarColor</item>
    </style>

    <!--Dark theme-->

    <style name="YourAlertDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>


    <style name="routine_text_view_item" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="routine_edit_text_item" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="routine_image_view_description">
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:contentDescription">@string/termdescription</item>
        <item name="android:background">@drawable/baseline_help_outline_24</item>
    </style>

    <style name="routine_description_layout">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="workout_text_view_title_item" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="workout_linear_layout_title_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>


</resources>