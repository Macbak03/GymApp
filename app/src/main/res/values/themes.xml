<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.GymApp" parent="@style/Theme.AppCompat.NoActionBar" />

    <style name="routine_text_view_item" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="routine_edit_text_item" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="workout_text_view_title_item" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="workout_linear_layout_title_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>



    </style>
</resources>