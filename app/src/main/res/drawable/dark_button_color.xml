<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00CCCCCC" /> <!-- Shadow color -->
            <corners android:radius="15dp" /> <!-- Corner radius of button -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2D2F32"
                android:centerColor="#000f18"
                android:endColor="#1B2135"
                android:angle="90"
                android:centerX="0.01"
                android:centerY="0.5" />
            <corners android:radius="15dp" /> <!-- Corner radius of button -->
        </shape>
    </item>
    <!-- ... add more items if you want more layers to shadow for depth effect ... -->

    <!-- Button Foreground -->
    <item android:bottom="5dp" android:right="2dp">
        <shape android:shape="rectangle">
<!--      fajne      android:startColor="#1B2135"
            android:centerColor="#191F32"
            android:endColor="#1B2135"

                android:startColor="#4D3D80"
                android:centerColor="#483681"
                android:endColor="#4D3D80"
            -->
            <gradient
                android:startColor="#1B2135"
                android:centerColor="#191F32"
                android:endColor="#1B2135"
                android:angle="90"
                android:centerX="0.2"
                android:centerY="0.5" />
            <corners android:radius="5dp" /> <!-- Corner radius of button -->
            <stroke
                android:width="2dp"
                android:color="#3D3264"/>
        </shape>
    </item>
</layer-list>