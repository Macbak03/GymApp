<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00CCCCCC" /> <!-- Shadow color -->
            <corners android:radius="10dp" /> <!-- Corner radius of button -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2D2F32"
                android:centerColor="#000f18"
                android:endColor="#1B2135"
                android:angle="90"
                android:centerX="0.01"
                android:centerY="0.5" />
            <corners android:radius="10dp" /> <!-- Corner radius of button -->
        </shape>
    </item>
    <!-- ... add more items if you want more layers to shadow for depth effect ... -->

    <!-- Button Foreground -->
    <item android:bottom="5dp" android:right="2dp">
        <shape android:shape="rectangle">
<!--      fajne      android:startColor="#1B2135"
            android:centerColor="#191F32"
            android:endColor="#1B2135"-->
            <gradient
                android:startColor="#3E496B"
                android:centerColor="#354168"
                android:endColor="#3E496B"
                android:angle="150"
                android:centerX="0.5"
                android:centerY="0.5" />
            <corners
                android:radius="10dp"/>
            <corners android:radius="3dp" /> <!-- Corner radius of button -->
        </shape>
    </item>
</layer-list>