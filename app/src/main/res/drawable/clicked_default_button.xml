<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00CCCCCC" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#2D2F32"
                android:centerColor="#000f18"
                android:endColor="#1B2135"
                android:angle="90"
                android:centerX="0.01"
                android:centerY="0.5" />
            <corners android:radius="25dp" />
        </shape>
    </item>
    <!-- ... add more items if you want more layers to shadow for depth effect ... -->

    <!-- Button Foreground -->
    <item android:bottom="5dp" android:right="2dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#912323"/>
            <corners android:radius="20dp" /><!-- Corner radius of button -->
        </shape>
        #912323
    </item>
</layer-list>
